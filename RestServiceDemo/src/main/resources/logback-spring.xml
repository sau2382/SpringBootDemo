<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<springProperty scope="context" name="appname" source="spring.application.name"/>
	<springProperty scope="context" name="logFilePath" source="demoservice.log.path"/>
	<springProperty scope="context" name="rolloverSize" source="demoservice.log.rolloverSize"/>
	
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd-HH:mm:ss.SSS}-[%thread]-%-5level-%logger{36}.%M[%line]-%msg%n</pattern>
        </layout>
    </appender>

	<appender name="FILE-ROLLING"
		class="ch.qos.logback.core.rolling.RollingFileAppender">

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${logFilePath}/${appname}_log_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<maxFileSize>${rolloverSize}</maxFileSize>
		    <maxHistory>60</maxHistory>
		    <totalSizeCap>20GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
		    <pattern>%d{yyyy-MM-dd-HH:mm:ss.SSS}-[%thread]-%-5level-%logger{36}.%M[%line]-%msg%n</pattern>
		</encoder>
	</appender>


	<logger name="com.sg" level="debug"
		additivity="false">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</logger>

	<root level="error">
		<appender-ref ref="FILE-ROLLING" />
		<appender-ref ref="CONSOLE" />
	</root>

</configuration>